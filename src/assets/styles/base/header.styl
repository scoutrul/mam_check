@import "~@/assets/styles/vars/index.styl";

.header
	display flex
	flex 0 0 auto
	position fixed
	width 100%
	top 0
	z-index 10
	align-items: center;
	transition height $transition_header
	height: 128px;
	left: 0
	@media (max-width: $XS_break)
		position absolute

	&__container
		height: 100%
		align-items: center;
		margin: 0 auto;
		flex-flow row nowrap !important
		background-color #FFF
		&:before
			content: '';
			display: flex;
			position: absolute;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background: #FFF;
			z-index: 0;
		@media (max-width: $XS_break)
			background: transparent;
	&.fixed
		position fixed

	.vue-portal-target
		display: flex;
		flex: 0;
		justify-content: flex-end;