@import '../vars/index.styl';

.footer
	display flex;
	overflow hidden
	flex: 1 0 auto;
	&__container
		transform: translateY(100%);
		&.animateShow {
			transform: translateY(0);
			transition: $transition_footer .25s
		}
		height: fit-content;
		align-items: center;
		flex-direction: row !important;
		@media(max-width: $MD_break)
			flex-direction column !important;
			align-items: flex-start;
	&__logo {
		@media(min-width: $MD_break) {
			max-width: 200px !important;
		}
		.logo {
			margin 20px 0
		}
	}

	.copyrights
		display block
		flex 1 1 320px
	&__menu
		.menu
			flex-flow row wrap
			justify-content: flex-start;
			@media(min-width: $LG_break)
				justify-content: flex-end;
			li
				margin 0 20px 0 0
			@media(max-width: $XS_break)
				li
					flex-flow column wrap
