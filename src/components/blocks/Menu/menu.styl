@import '../../../assets/styles/vars/index.styl';
.menu
	display: flex;
	padding: 0;
	flex 1 1 auto
	align-self center
	list-style none
	li
		@media (max-width $MD_break)
			margin 0 0 0 20px
		margin: 0 0 0 40px;
		line-height: 24px;
		font-weight: bold;
		display flex
		line-height 100%

		&:last-child
			margin-right 0 !important
		a
			font-size: 16px;
			color: $Black_Text;
			text-decoration none
			transition $transition_hover
			&:hover
				color $Lighter_Text
