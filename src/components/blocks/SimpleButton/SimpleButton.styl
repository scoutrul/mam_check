@import '../../../assets/styles/vars/index.styl';
.button__simple
	border-color: $Main_White
	background-color $Main_White
	margin 0
	width 100%
	flex: 1 1 120px;
	max-width 240px
	height 50px
	max-height 50px
	bottom 0;
	cursor pointer
	border 0
	display flex
	@media (max-width $cta_button_brake)
		display none
	.v-btn__content, a
		color $Black_Text
		text-transform: none
		font-weight: bold;
		font-size 16px
		&:hover
			color $Lighter_Text
