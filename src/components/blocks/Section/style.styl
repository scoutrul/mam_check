@import "../../../assets/styles/vars"

.arc {
    width: 100vw;
    height: auto;
    position: relative;
    left: 50%;
    z-index 2
    path {
        transform-origin center
        fill currentColor
    }
    &_top {
        top 0
        transform: rotateX(0deg) translateX(-50%);
    }
    &_bottom {
        bottom 0
        transform: rotateX(180deg) translateX(-50%);
    }
    &.reverse {
        background $Main_White
        &.arc_top {
            transform: translateX(-50%) translateY(calc(0% + 12px))
        }
        &.arc_bottom {
            transform: translateX(-50%) translateY(calc(0% - 12px));
        }
    }
}
.content_container {
    color: transparent
    position: relative
    margin 20px auto
    z-index 1
    flex 0 0 auto
	width: 100%
    &:nth-child(2) {
        z-index 2
    }
    .content_block {
        display flex
        min-height 60px
        padding 40px 0
        &:after {
            content ''
            display: block;
            position: absolute;
            top: 37px;
            bottom: 37px;
            left: 50%;
            width: 100vw;
            background: currentColor
            transform: translateX(-50%);
            z-index 0
        }
    }
}

.isUnder600 {
	.isUnder600 {
		flex-flow column nowrap !important
	}
}
.flex-end {
	align-items flex-end
}
.flex-start {
	align-items flex-start
}
.wrap {
	background-color currentColor
	flex-flow column nowrap
	z-index 9
}