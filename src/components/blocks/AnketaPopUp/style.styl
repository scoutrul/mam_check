@import '../../../assets/styles/vars/index.styl';


.v-dialog
	display: flex
	align-items: flex-start
	justify-content: center
	box-shadow: none;
	height 100%
	max-height 100% !important
	margin 0
	.medform
		background: #FFFFFF;
		box-shadow: 0px 40px 120px rgba(19, 24, 31, 0.15);
		border-radius: 16px;
		max-width 1080px
		width: 100%;
		height calc(100% - 120px )
		margin 60px
		display flex
		flex-flow column wrap
		.inner
			padding 32px 60px
			height 100%
			box-sizing: border-box;
		@media (max-width: $MD_break)
			height calc(100%)
			margin 20px
			.inner
				padding 16px
		@media (max-width: $XS_break)
			margin 0
			border-radius 0
		label
			line-height: 18px;
			font-size: 13px;
			color: #606774;
			padding-right 80px
		&__header
			display: flex;
			justify-content: center;
			align-items: center;
			padding 10px 0

			.title
				line-height: 40px;
				font-size: 28px;
				font-weight bold
				color: #1E1E1E;
				white-space nowrap
				@media (max-width: $XS_break + 100)
					line-height: 22px;
					font-size: 15px;
					text-align center
		.hideBtn
			margin 0 0 0 40px
			@media (max-width: $LG_break)
				display none
		&__footer
			display flex
			padding 10px 0
			flex-wrap nowrap
			align-items: flex-end
			@media (max-width: $XS_break + 100)
				flex-wrap wrap
			.button__yellow, .button__simple
				margin 10px 20px 0 0
				display flex
				flex: 1 1 240px;
				max-width 240px
				box-sizing: border-box;
				@media (max-width: $XS_break + 100)
					margin 8px 0
					max-width: 100%;
					flex: 1 0 220px;

		&__body
			padding 10px 0