@import "../../../assets/styles/vars"

.pretest
	margin-top: 220px
	img, svg
		max-width: 100%;
	.title
		line-height: 32px;
		font-size: 20px;
		margin: 70px;
		font-weight: bold;
		text-align center
	&__buttons
		@media(max-width: $XS_break) {
			flex-flow column wrap
		}
		max-height: max-content;
		width 100%
		max-width: 520px;
		&_item
			max-height 48px
			margin: 8px

	.v-stepper__items {
		width 100%
		max-width: 840px;
	}
	.v-stepper__wrapper {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
	}