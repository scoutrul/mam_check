@import '~@/assets/styles/vars/index.styl';

.section1 {
	.section1_pic {
		align-items: flex-end;
		display: flex;
		position relative
		@media (max-width $cta_button_brake) {
			margin-bottom: -24%;
			transform: translateX(5%) translateY(-10%);
		}
		@media (max-width $XS_break) {
			margin-bottom: -18%
		}
		svg, img {
			transform: translateY(22%) translateX(-50%);
			position: absolute;
			bottom: -10px;
			left: 50%;
			min-width 520px
			@media (max-width $XL_break) {
				transform: translateY(22%) translateX(-40%);
			}
			@media (max-width $LG_break) {
				transform: translateY(16%) translateX(-30%);
			}
			@media (max-width $cta_button_brake) {
				min-width 100%
				position static
				transform none
			}
		}
	}
}

.section2 {
	.inner {
		margin-bottom: 80px
		padding-top: 80px;
	}
	margin-top: 80px;
	text-align: center;
	.banner {
		text-align left
		color #FFF
		background: #00BAFF;
		box-shadow: 0px 20px 50px rgba(19, 24, 31, 0.1);
		border-radius: 16px;
		flex-flow: column wrap !important;
		padding 41px 52px
		background-image url("~@/assets/images/banner_bg.svg")
		background-position: 101% top;
		background-repeat: no-repeat;
		background-size contain
		transform: translateY(80px);
		p, h1, h2 {
			color #FFF
		}

	}
}

.section3 {
	text-align: center;
	margin-bottom: -120px;
	z-index: 2;
	padding-top: 80px;
	.listing {
		flex-wrap wrap
		justify-content: space-between;
		margin: 0;
		.block {
			background-color white
			display flex
			flex-flow column
			align-content center
			width 100%
			max-width: 280px;
			box-shadow: 0px 8px 30px rgba(19, 24, 31, 0.08);
			border-radius: 12px;
			line-height: 24px;
			font-size: 16px;
			color $Black_Text
			justify-content: flex-start;
			padding: 40px 0px 20px;
			font-weight bold
			margin-bottom 20px
			p {
				padding 0 20px
			}
			.icon {
				@media (max-width $LG_break) {
					margin 0 32px 16px 0;
				}
			}
		}
		@media (max-width $XL_break) {
			max-width: 728px;
			margin: auto;
			justify-content: center;
			.block {
				max-width: none;
				width 100%
				flex-direction: row;
				align-items: center;
				padding: 20px;
				text-align: left;
			}
		}
	}
}


.section4 {
	.inner {
		padding-top: 120px;
		@media (max-width $LG_break) {
			flex-direction column
			.button__yellow {
				display none
			}
		}
		.section4_descr {
			padding 0 16px
			@media (max-width $LG_break) {
				order 1
				margin 0 auto 40px auto
				padding 0
				max-width: 728px;
			}
		}
		.listing {
			flex-wrap wrap
			justify-content: space-between;
			margin: 0;
			padding 0 16px
			width 100%
			@media (max-width $LG_break) {
				order 2
				padding 0
			}

			.block {
				background-color white
				display flex
				align-content center
				box-shadow: 0px 8px 30px rgba(19, 24, 31, 0.08);
				border-radius: 12px;
				justify-content: flex-start;
				padding: 40px 0px 20px;
				margin-bottom 20px
				@media (max-width $MD_break) {
					flex-flow column wrap
				}
				.img {
					margin 0 32px 16px;
					@media (max-width $MD_break) {
						margin-left 0
					}
				}
				.text {
					.text__header {
						color $Black_Text
						line-height: 24px;
						font-size: 16px;
						font-weight bold
					}
					p {
						padding 0
						line-height: 22px;
						font-size: 15px;
						color $Grey
					}
				}

			}
			@media (max-width $XL_break) {
				max-width: 728px;
				margin: auto;
				justify-content: center;
				.block {
					flex-direction: row;
					align-items: center;
					padding: 20px;
					text-align: left;
				}
			}
		}
	}
}

.section5 {
	@media (max-width $cta_button_brake) {
		flex-flow column wrap
	}
	.special {
		line-height: 18px;
		font-size: 13px;
		color $Lighter_Text
		max-width: 400px;
	}
	.section5_pic {
		display: flex;
		justify-content: center;
		@media (max-width $LG_break) {
			justify-content: end;
			flex-flow column wrap
		}
		svg {
			min-width 775px
			max-width 100%
			@media (max-width $XL_break) {
				min-width 500px
			}

			@media (max-width $XS_break) {
				min-width 100%
			}

		}
	}
}

.pad16  {
	padding 16px 0
}

.max960 {
	max-width 960px
	margin auto
}
.max760 {
	max-width 760px
	margin auto
}

.note {
	opacity .65
	font-size: 16px;
	margin: 0 16px
}